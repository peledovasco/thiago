programa
{
	
	funcao inicio()
	{	real base, altura, area

		escreva("Digite a base")
		leia(base)

		escreva("digite a altura")
		leia(altura)

		area = retornoArea(base,altura)
		escreva(area)
		
	}

	funcao real retornoArea(real base, real altura){

		real area = (base * altura)/2
		
		retorne area
	}
}
